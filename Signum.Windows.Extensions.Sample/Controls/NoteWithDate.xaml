<UserControl x:Class="Signum.Windows.Extensions.Sample.Controls.NoteWithDate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Signum.Test;assembly=Signum.Test"
    m:Common.TypeContext="d:NoteWithDateDN"
    MinWidth="300">
    <StackPanel>
        <m:ValueLine m:Common.Route="Text" />
        <m:EntityCombo m:Common.Route="Target" />
        <m:ValueLine m:Common.Route="CreationTime" />
        <m:DateTimePicker SelectedDate="{Binding CreationTime}"/>
        <DatePicker SelectedDate="{Binding CreationTime}"/>
        <Button Click="Button_Click"/>
    </StackPanel>
</UserControl>
