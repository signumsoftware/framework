@using Signum.Entities.Mailing
@using Signum.Web.Files

@using (var sc = Html.TypeContext<EmailAttachmentDN>())
{
    sc.FormGroupStyle = FormGroupStyle.SrOnly;
    @Html.FileLine(sc, ea => ea.File, fl => { fl.FileType = EmailFileType.Attachment; fl.Remove = false; fl.DragAndDrop = false; })
    @Html.HiddenLine(sc, c => c.Type)
}
