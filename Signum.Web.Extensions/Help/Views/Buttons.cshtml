@using Signum.Web.Help
@using Signum.Entities.Help
<div id="syntax-list" class="row" style="display: none">
    <div class="col-md-6">
        <h3>@HelpSyntaxMessage.Texts.NiceToString()</h3>
        <table class="table table-condensed">
            <tr>
                <td><b>@HelpSyntaxMessage.BoldText.NiceToString()</b></td>
                <td><code>'''@HelpSyntaxMessage.BoldText.NiceToString()'''</code></td>
            </tr>
            <tr>
                <td><i>@HelpSyntaxMessage.ItalicText.NiceToString()</i></td>
                <td><code>''@HelpSyntaxMessage.ItalicText.NiceToString()''</code></td>
            </tr>
            <tr>
                <td><u>@HelpSyntaxMessage.UnderlineText.NiceToString()</u></td>
                <td><code>_@HelpSyntaxMessage.UnderlineText.NiceToString()_</code></td>
            </tr>
            <tr>
                <td><s>@HelpSyntaxMessage.StriketroughText.NiceToString()</s></td>
                <td><code>-@HelpSyntaxMessage.StriketroughText.NiceToString()-</code></td>
            </tr>
        </table>
        <h3>@HelpSyntaxMessage.Links.NiceToString()</h3>
        <table class="table table-condensed">
            <tr>
                <td><a href="#">@HelpSyntaxMessage.LinkToEntity.NiceToString()</a></td>
                <td><code>[e:MyEntityEntity]</code></td>
            </tr>
            <tr>
                <td><a href="#">@HelpSyntaxMessage.LinkToProperty.NiceToString()</a></td>
                <td><code>[p:MyEntityEntity.Property]</code></td>
            </tr>
            <tr>
                <td><a href="#">@HelpSyntaxMessage.LinkToQuery.NiceToString()</a></td>
                <td><code>[q:MyEntityQuery.SomeQuery]</code></td>
            </tr>
            <tr>
                <td><a href="#">@HelpSyntaxMessage.LinkToOperation.NiceToString()</a></td>
                <td><code>[o:EntidadOperation.Crear]</code></td>
            </tr>
            <tr>
                <td><a href="#">@HelpSyntaxMessage.LinkToNamespace.NiceToString()</a></td>
                <td><code>[n:MyApplication.Entities.MyModule]</code></td>
            </tr>
            <tr>
                <td><a href="#">@HelpSyntaxMessage.ExernalLink.NiceToString()</a></td>
                <td><code>[h:http://www.google.es]</code></td>
            </tr>
        </table>
        @HelpSyntaxMessage.LinksAllowAnExtraParameterForTheText.NiceToString().
            @HelpSyntaxMessage.Example.NiceToString():<a href="http://www.google.es">Google</a> <code>[h:http://www.google.es|Google]</code>
    </div>
    <div class="col-md-6">
        <h3>@HelpSyntaxMessage.Lists.NiceToString()</h3>
        <table class="table table-condensed">
            <tr>
                <td>
                    <ul>
                        <li>@HelpSyntaxMessage.UnorderedListItem.NiceToString()</li>
                        <li>@HelpSyntaxMessage.OtherItem.NiceToString()</li>
                    </ul>
                </td>
                <td><code>* @HelpSyntaxMessage.UnorderedListItem.NiceToString()</code><br />
                    <code>* @HelpSyntaxMessage.OtherItem.NiceToString()</code></td>
            </tr>
            <tr>
                <td>
                    <ol>
                        <li>@HelpSyntaxMessage.OrderedListItem.NiceToString()</li>
                        <li>@HelpSyntaxMessage.OtherItem.NiceToString()</li>
                    </ol>
                </td>
                <td><code># @HelpSyntaxMessage.OrderedListItem.NiceToString()</code><br />
                    <code># @HelpSyntaxMessage.OtherItem.NiceToString()</code></td>
            </tr>
        </table>
        <h3>@HelpSyntaxMessage.Images.NiceToString()</h3>
        <table class="table table-condensed">
            <tr>
                <td>@HelpSyntaxMessage.InsertImage.NiceToString()</td>
                <td><code>[imageright|Pie de foto|imagen.jpg]</code> o <code>[imageright|imagen.jpg]</code>
                    (@HelpSyntaxMessage.Options.NiceToString() <code>imageright</code>, <code>imageleft</code>, <code>imagecentre</code>, <code>imageauto</code>)</td>
            </tr>
        </table>
        <h3>@HelpSyntaxMessage.Title.NiceToString()</h3>
        <table class="table table-condensed">
            <tr>
                <td>
                    <h2>@HelpSyntaxMessage.TitleLevel.NiceToString() 2</h2>
                </td>
                <td><code>==@HelpSyntaxMessage.TitleLevel.NiceToString() 2==</code></td>
            </tr>
            <tr>
                <td>
                    <h3>@HelpSyntaxMessage.TitleLevel.NiceToString() 3</h3>
                </td>
                <td><code>===@HelpSyntaxMessage.TitleLevel.NiceToString() 3===</code></td>
            </tr>
            <tr>
                <td>
                    <h4>@HelpSyntaxMessage.TitleLevel.NiceToString() 4</h4>
                </td>
                <td><code>====@HelpSyntaxMessage.TitleLevel.NiceToString() 4====</code></td>
            </tr>
            <tr>
                <td>
                    <h5>@HelpSyntaxMessage.TitleLevel.NiceToString() 5</h5>
                </td>
                <td><code>=====@HelpSyntaxMessage.TitleLevel.NiceToString() 5=====</code></td>
            </tr>
        </table>
    </div>
</div>
<div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
        <button id="edit-action" type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-pencil"></span>&nbsp;@HelpSyntaxMessage.Edit.NiceToString()
        </button>
    </div>
    <div class="btn-group">
        <button id="save-action" type="button" class="btn btn-default btn-sm btn-primary" style="display: none">
            <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;@HelpSyntaxMessage.Save.NiceToString()
        </button>
    </div>
    <div class="btn-group">
        <button id="syntax-action" type="button" class="btn btn-default btn-sm" style="display: none">
            <span class="glyphicon glyphicon-info-sign"></span>&nbsp;@HelpSyntaxMessage.Syntax.NiceToString()
        </button>
    </div>
    @{
        var cultures = (Dictionary<System.Globalization.CultureInfo, string>)ViewData["options"];
    }
    @if (cultures.Any())
    {
        <div class="btn-group" role="group" id="translate-action" style="display: none">
            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                @HelpSyntaxMessage.TranslateFrom.NiceToString() <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                @foreach (var kvp in cultures)
                {
                    <li><a href="@kvp.Value">@kvp.Key.NativeName</a></li>
                }
            </ul>
        </div>
    }
</div>

<script>
    @HelpClient.Module["init"]()
</script>
