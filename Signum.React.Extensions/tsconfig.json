{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "incremental": true,
    "outDir": "./ts_out",
    "composite": true,
    //"noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "declarationMap": true,
    "paths": {
      "*": [
        "../../Framework/Signum.React/node_modules/@types/*",
        "../../Framework/Signum.React/node_modules/*",
        "*"
      ],
      "@framework/*": [ "../../Framework/Signum.React/Scripts/*" ]
    },
    "lib": [
      "es2017",
      //"esnext",
      "dom"
    ]
  },
  "exclude": [
    "../../Framework/Signum.React/ts_out",
    "../../Framework/Signum.React/node_modules",
    "./node_modules",
    "./ts_out"
  ],
  "references": [
    { "path": "../../Framework/Signum.React" }
  ]
}
